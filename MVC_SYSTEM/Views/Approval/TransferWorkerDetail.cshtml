                                        @*<button class="btn btn-default" data-toggle="modal" data-target="#modal-2">Launch Modal 3</button>*@
                                    </td>
                                </tr>
                            }
                        </table>
                    }
                </div>
                <div class="modal-footer">
                    <button class="btn btn-warning" data-dismiss="modal">@GlobalResEstate.btnBack</button>
                </div>


            </div>
        </div>


}


