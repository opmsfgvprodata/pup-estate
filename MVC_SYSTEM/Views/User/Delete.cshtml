@model MVC_SYSTEM.AuthModels.tblUser

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 class="modal-title">Delete User</h3>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="modal-body">

        <div class="form-horizontal">
            <span id="progress" class="text-center" style="display: none;">
                <img src="~/Asset/Images/wait.gif" alt="wait" />
            </span>
            <div class="form-group">
                @Html.LabelFor(m => Model.fldUserName, new { @class = "control-label col-sm-2" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.fldUserName, new { @class = "form-control required", @disabled = "disabled" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => Model.fldUserFullName, new { @class = "control-label col-sm-2" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.fldUserFullName, new { @class = "form-control required", @disabled = "disabled" })
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-sm-9 col-sm-offset-3">
                    <h3>
                        <span class="label label-danger">
                            Are you sure to delete this user?
                        </span>
                    </h3>
                </div>
            </div>
        </div>
    </div>


    <div class="modal-footer">
        <button class="btn btn-primary" data-dismiss="modal">No</button>
        <input class="btn btn-danger" type="submit" value="Yes" />
    </div>
}