@using MVC_SYSTEM.Class

@{
    @Scripts.Render("~/bundles/jqueryval")
}

<section class="content-wrapper main-content clear-fix">

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 class="modal-title">@GlobalResEstate.btnSearchAdvance</h3>
    </div>
        <div class="modal-body">
            <div class="form-group">
                <label>@GlobalResEstate.lblStatus</label>
                @Html.DropDownList("StatusList", null, htmlAttributes: new {@class = "form-control"})
            </div>
            <div class="form-group">
                <label>@GlobalResEstate.hdrWorkAktvt</label>
                @Html.DropDownList("WorkCategoryList", null, htmlAttributes: new {@class = "form-control"})
            </div>
        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-primary" id="LihatRekodAttendanceAdvance">@GlobalResEstate.btnView</button>
            <button type="button" class="btn btn-warning" data-dismiss="modal">@GlobalResEstate.btnBack</button>
        </div>
</section>


<script>
    $(document).ready(function () {
        $('#LihatRekodAttendanceAdvance').on("click", function (e) {
            $('#divLoading').show();
            var Radiogrp = $('input[name=RadioGroup]:checked').val();
            console.log(Radiogrp);
            var month = $("#MonthList").val();
            console.log(month);
            var year = $("#YearList").val();
            console.log(year);
            var selection = $("#SelectionList").val();
            console.log(selection);
            var status = $("#StatusList").val();
            console.log(status);
            var workCategory = $("#WorkCategoryList").val();
            console.log(workCategory);

            $('#searchResultWorkerPaySlipRptInfo').load('@Url.Action("_WorkerPaySlipRptSearch", "Report")', { RadioGroup: Radiogrp, MonthList: month, YearList: year, SelectionList: selection, StatusList: status, WorkCategoryList: workCategory});
            $('#myModal1').modal('hide');
            $('#divLoading').hide();
        });
    });
</script>
