@using MVC_SYSTEM.Class
@model IEnumerable<MVC_SYSTEM.ViewingModels.tbl_Kerjahdr>

@{
    int bil = 0;
}

<section class="content-wrapper main-content clear-fix">

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 class="modal-title">Maklumat Hadir Hari Biasa Pekerja</h3>
    </div>
    <div class="modal-body">
        <table class="table table-hover table-bordered" style="font-size: 11px;" border="0">
            <thead>
                <tr>
                    <th rowspan="2" width="1%" bgcolor="#ffcc80" style="color:white;text-align:center;vertical-align:middle !important;border:1px solid black;" border="1">@GlobalResEstate.hdrNo</th>
                    <th rowspan="2" width="3%" bgcolor="#ffcc80" style="color:white;text-align:center;vertical-align:middle !important;border:1px solid black;" border="1">Tarikh</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    bil = bil + 1;

                    <tr>
                        <td align="center" style="vertical-align:middle !important;border:1px solid black;" border="1">
                            @bil
                        </td>
                        <td align="center" style="vertical-align:middle !important;border:1px solid black;" border="1">
                            @item.fld_Tarikh
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-warning" data-dismiss="modal">@GlobalResEstate.btnBack</button>
    </div>
</section>