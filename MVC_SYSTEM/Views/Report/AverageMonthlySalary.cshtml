@model IEnumerable<MVC_SYSTEM.Models.tbl_Kerja>
@using MVC_SYSTEM.Class;

@{
    ViewBag.Title = "AverageMonthlySalary";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <section class="content-wrapper main-content clear-fix">
        <div class="well bottom">
            <div class="row">
                <div class="col-sm-2">
                    @Html.Label("Tahun")
                    @Html.DropDownList("YearList", null, htmlAttributes: new { @class = "form-control" })
                </div>
                <div class="col-sm-2">
                    @Html.Label("Kumpulan")
                    @Html.DropDownList("GroupList", null, htmlAttributes: new { @class = "form-control" })
                </div>
                <div class="col-sm-2">
                    @Html.Label("Pekerja")
                    @Html.DropDownList("WorkerList", null, htmlAttributes: new { @class = "form-control" })
                </div>
                <div class="col-sm-2" style="padding-top:25px;">
                    <input class="btn btn-primary btn-block" type="submit" name="Lihat" id="btnSubmit" value="@GlobalResNoSkb.btnViewName" />
                </div>
            </div>
        </div>
        <div id="content" class="well">
            <p style="text-align:center;"><label>Laporan AIPS</label></p>
            <p style="color:red">Sila pilih tahun, kumpulan dan pekerja</p>
        </div>
    </section>
}
