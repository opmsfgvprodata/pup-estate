@using MVC_SYSTEM.Class
@model MVC_SYSTEM.MasterModels.tbl_HargaSawitRange

@{
    @Scripts.Render("~/bundles/jqueryval")
    GetConfig config = new GetConfig();
}

<section class="content-wrapper main-content clear-fix">

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        @if (Model.fld_Deleted == false)
        {
            <h3 class="modal-title">@GlobalResEstate.lblOilPriceRangeDelete</h3>
        }
        else
        {
            <h3 class="modal-title">@GlobalResEstate.lblOilPriceRangeUnDelete</h3>
        }
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="modal-body">
            <div class="form-horizontal">
                <div class="panel panel-primary">
                    <div class="panel-heading">@GlobalResEstate.lblOilPriceRangeInfo</div>
                    <div class="panel-body">
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResEstate.lblOilPriceRangeCode:</label>
                            <div class="col-sm-2">
                                @Html.TextBoxFor(model => model.fld_KodHarga, htmlAttributes: new { @class = "form-control", @disabled = "true" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResEstate.lblOilPriceRangeLower:</label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(model => model.fld_RangeHargaLower, htmlAttributes: new { @class = "form-control", @disabled = "true" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResEstate.lblOilPriceRangeUpper:</label>
                            <div class="col-sm-4">
                                @Html.TextBoxFor(model => model.fld_RangeHargaUpper, htmlAttributes: new { @class = "form-control", @disabled = "true" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResEstate.lblOilPriceRangeIncentive:</label>
                            <div class="col-sm-4">
                                @Html.TextBoxFor(model => model.fld_Insentif, htmlAttributes: new { @class = "form-control", @disabled = "true" })
                            </div>
                        </div>
                        @Html.HiddenFor(model => model.fld_ID)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-12 text-center">
                    <h3>
                        <span class="label label-danger">
                            @GlobalResEstate.msgDelete
                        </span>
                    </h3>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <input class="btn btn-success" type="submit" value=@GlobalResEstate.btnYes>
            <button class="btn btn-danger" data-dismiss="modal">@GlobalResEstate.btnNo</button>
        </div>
    }
</section>

<script>
    $("form").removeData("validator");
    $("form").removeData("unobtrusiveValidation");
    $.validator.unobtrusive.parse("form");
</script>