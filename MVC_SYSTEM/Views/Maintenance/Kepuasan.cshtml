@model MVC_SYSTEM.Models.tbl_Kepuasan
@using MVC_SYSTEM.Class
@{
    ViewBag.Title = "CustomerMaintenance";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

@{
    @Scripts.Render("~/bundles/jqueryval")
}


<section class="content-wrapper main-content clear-fix">

    @*<div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h3 class="modal-title">@GlobalResEstate.lblWorkerTypeUpdate</h3>
        </div>*@

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        if (Model == null)
        {
            <div class="modal-header">
                @*<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>*@
                <h3 class="modal-title">@GlobalResEstate.titleCust</h3>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    @*<span id="progress" class="text-center" style="display: none;">
                        <img src="~/Asset/Images/wait.gif" alt="wait" />
                    </span>*@
                    <div class="form-group">
                        <label class="control-label col-md-2">@GlobalResEstate.hdrCustLevel</label>
                        <div class="col-sm-3">
                            @Html.RadioButton("RadioGroup", 1, new { @checked = "checked" })
                            @Html.Label(GlobalResEstate.lblMin)<br />
                        </div>
                        <div class="col-sm-3">
                            @Html.RadioButton("RadioGroup", 2)
                            @Html.Label(GlobalResEstate.lblScd)<br />
                        </div>
                        <div class="col-sm-3">
                            @Html.RadioButton("RadioGroup", 3)
                            @Html.Label(GlobalResEstate.lblStd)<br />
                        </div>
                        <div class="col-sm-3">
                            @Html.RadioButton("RadioGroup", 4)
                            @Html.Label(GlobalResEstate.lblUp)<br />
                        </div>
                        <div class="col-sm-3">
                            @Html.RadioButton("RadioGroup", 5)
                            @Html.Label(GlobalResEstate.lblMax)
                        </div>
                    </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">@GlobalResEstate.hdrCatat</label>
                            <div class="col-md-9">
                                @Html.TextBox("fld_Catatan", "", new { @class = "form-control" })
                            </div>
                        </div>
                </div>
            </div>
            <div class="modal-footer">
                <input class="btn btn-primary" type="submit" value=@GlobalResEstate.btnSubmit />
            </div>
        }
        else
        {
            <div class="modal-body" style="text-align: center">
                <p style="color: red">@ViewBag.Message</p>

            </div>
        }
    }

</section>

<script>
    $("form").removeData("validator");
    $("form").removeData("unobtrusiveValidation");
    $.validator.unobtrusive.parse("form");

</script>
