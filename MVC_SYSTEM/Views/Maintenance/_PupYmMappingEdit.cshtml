@using MVC_SYSTEM.Class
@model MVC_SYSTEM.MasterModels.tbl_UpahAktivitiViewModel

@{
    @Scripts.Render("~/bundles/jqueryval")
}

<section class="content-wrapper main-content clear-fix">

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 class="modal-title">@GlobalResEstate.lblPupYmUpdate</h3>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="modal-body">
            <div class="form-horizontal">
                <div class="panel panel-primary">
                    <div class="panel-heading">@GlobalResEstate.lblPupYmAktivitiInfo</div>
                    <div class="panel-body">
                        <div class="form-group">
                            <label for="ListReport" class="control-label col-sm-3">@GlobalResEstate.hdrActvtCode:</label>
                            <div class="col-sm-2">
                                @Html.TextBoxFor(model => model.fld_KodAktvt, htmlAttributes: new { @class = "form-control", @readonly = "readonly" })
                                @Html.ValidationMessageFor(model => model.fld_KodAktvt, "", new { @class = "text-danger" })
                            </div>
                        </div>                        
                        <div id="sublist" class="form-group">
                            <label for="ListReport" class="control-label col-sm-3">@GlobalResEstate.lblPupYmDesc:</label>
                            <div class="col-sm-7">
                                @Html.TextBoxFor(model => model.fld_Desc, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.fld_Desc, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="ListReport" class="control-label col-sm-3">@GlobalResEstate.lblPupYmUnit:</label>
                            <div class="col-md-9">
                                @Html.DropDownList("fld_Unit", null, htmlAttributes: new { @class = "form-control required" })
                                @Html.ValidationMessageFor(model => model.fld_Unit, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="ListReport" class="control-label col-sm-3">@GlobalResEstate.lblPupYmRate:</label>
                            <div class="col-sm-3">
                                @Html.TextBoxFor(model => model.fld_Harga, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.fld_Harga, "", new { @class = "text-danger" })
                            </div>
                        </div>               
                        @Html.HiddenFor(model => model.fld_ID)
                      
                    </div>
                </div>
            </div>
        </div>

        <div class="modal-footer">
            <input class="btn btn-success" type="submit" value=@GlobalResEstate.btnSave>
            <button class="btn btn-warning" data-dismiss="modal">@GlobalResEstate.btnBack</button>
        </div>
    }
</section>

<script>
    $("form").removeData("validator");
    $("form").removeData("unobtrusiveValidation");
    $.validator.unobtrusive.parse("form");
</script>

