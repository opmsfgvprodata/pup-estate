@using MVC_SYSTEM.Class
@model MVC_SYSTEM.MasterModels.tblOptionConfigsWeb

@{
    @Scripts.Render("~/bundles/jqueryval")
    GetConfig config = new GetConfig();
}

<section class="content-wrapper main-content clear-fix">

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        @if (Model.fldDeleted == false)
        {
            <h3 class="modal-title">@GlobalResEstate.lblUnitDelete</h3>
        }
        else
        {
            <h3 class="modal-title">@GlobalResEstate.lblUnitUnDelete</h3>
        }
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="modal-body">
            <div class="form-horizontal">
                <div class="panel panel-primary">
                    <div class="panel-heading">@GlobalResEstate.lblUnitInfo</div>
                    <div class="panel-body">
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResEstate.lblUnitCode:</label>
                            <div class="col-sm-2">
                                @Html.TextBoxFor(model => model.fldOptConfValue, htmlAttributes: new { @class = "form-control", @disabled = "true" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResEstate.lblDescription:</label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(model => model.fldOptConfDesc, htmlAttributes: new { @class = "form-control", @disabled = "true" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResEstate.hdrCategory:</label>
                            <div class="col-sm-4">
                                @Html.TextBoxFor(model => model.fldOptConfFlag2, htmlAttributes: new { @class = "form-control", @disabled = "true" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResEstate.lblIsDecimal:</label>
                            <div class="col-sm-4">
                                @Html.TextBox("IsNumber", config.GetWebConfigDesc(Model.fldOptConfFlag3, "pilihanYaTidak", Model.fld_NegaraID, Model.fld_SyarikatID), new { @class = "form-control", @disabled = "true" })
                            </div>
                        </div>
                        @Html.HiddenFor(model => model.fldOptConfID)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-12 text-center">
                    <h3>
                        <span class="label label-danger">
                            @GlobalResEstate.msgDelete
                        </span>
                    </h3>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <input class="btn btn-success" type="submit" value=@GlobalResEstate.btnYes>
            <button class="btn btn-danger" data-dismiss="modal">@GlobalResEstate.btnNo</button>
        </div>
    }
</section>

<script>
    $("form").removeData("validator");
    $("form").removeData("unobtrusiveValidation");
    $.validator.unobtrusive.parse("form");
</script>