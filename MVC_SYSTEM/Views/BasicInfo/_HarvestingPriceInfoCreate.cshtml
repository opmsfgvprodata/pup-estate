@using MVC_SYSTEM.Class
@model MVC_SYSTEM.Models.tbl_HargaMenuaiViewModelCreate

<section class="content-wrapper main-content clear-fix">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 class="modal-title">@GlobalResEstate.titlteRegisterIncentive</h3>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="modal-body">
            <div class="form-horizontal">
                <div class="panel panel-primary">
                    <div class="panel-heading">@GlobalResEstate.lblHarvestingPriceInfo</div>
                    <div class="panel-body">
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResEstate.lblLevelCode:</label>
                            <div class="col-sm-4">
                                @Html.TextBoxFor(model => model.fld_KodPeringkatUtama, htmlAttributes: new { @class = "form-control", @readonly = "true" })
                                @Html.ValidationMessageFor(model => model.fld_KodPeringkatUtama, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResEstate.lblLevelName:</label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(model => model.fld_NamaPeringkat, htmlAttributes: new { @class = "form-control", @disabled = "true" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResEstate.lblHarvestingPrice:</label>
                            <div class="col-sm-4">
                                @Html.TextBoxFor(model => model.fld_HargaMenuai, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.fld_HargaMenuai, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        @Html.HiddenFor(model => model.fld_JenisPeringkat)
                    </div>
                </div>
            </div>
        </div>

        <div class="modal-footer" style="margin-top: -20px;">
            <input class="btn btn-success" type="submit" value=@GlobalResEstate.btnSave />
            <button class="btn btn-warning" data-dismiss="modal">@GlobalResEstate.btnBack</button>
        </div>
    }
</section>

<script>
    $("form").removeData("validator");
    $("form").removeData("unobtrusiveValidation");
    $.validator.unobtrusive.parse("form");
</script>


