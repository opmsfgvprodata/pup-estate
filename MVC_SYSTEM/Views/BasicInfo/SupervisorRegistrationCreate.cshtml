@model MVC_SYSTEM.CustomModels.CustMod_SupervisorInfo
@using MVC_SYSTEM.Class
@{
    ViewBag.Title = "PayrateFullMaintenance";
}

<section class="content-wrapper main-content clear-fix">

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        @*Modified by Shazana 16/1/2024*@
        <h3 class="modal-title">Add Supervisor</h3>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="modal-body">
            <div class="form-horizontal">
                <div class="panel panel-primary">
                    <div class="panel-heading">Supervisor Details</div>
                    <div class="panel-body">
                        <div class="form-group">
                            <label class="control-label col-md-2">Estate:</label>
                            <div class="col-md-3">
                                @Html.TextBox("fld_LdgName", (String)ViewBag.fld_LdgName, htmlAttributes: new { @class = "form-control", disabled = "disabled" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Supervisor:</label>
                            <div class="col-md-9">
                                @Html.DropDownList("fld_SupervisorID", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.fldUserName, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        @Html.HiddenFor(model => model.fldUserName)
                        @Html.HiddenFor(model => model.fldUserFullName)
                        @Html.HiddenFor(model => model.fld_SyarikatID)
                        @Html.HiddenFor(model => model.fld_WilayahID)
                        @Html.HiddenFor(model => model.fld_LadangID)
                        @Html.HiddenFor(model => model.fld_NegaraID)


                    </div>
                </div>
            </div>
        </div>

        <div class="modal-footer">
            <input class="btn btn-primary" type="submit" value="Save" />
            <button class="btn btn-warning" data-dismiss="modal">Back</button>
        </div>
    }

</section>

<script>

        $("form").removeData("validator");
        $("form").removeData("unobtrusiveValidation");
        $.validator.unobtrusive.parse("form");



</script>

