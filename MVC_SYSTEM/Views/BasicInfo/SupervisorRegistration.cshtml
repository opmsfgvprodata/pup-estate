@model MVC_SYSTEM.ViewingModels.PagedList<MVC_SYSTEM.CustomModels.CustMod_SupervisorInfo>
@using MVC_SYSTEM.Class;
@{
    ViewBag.Title = "SupervisorRegistration";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
    //string aktvtselection = "";

    AjaxOptions options = new AjaxOptions
    {
        HttpMethod = "Get",
        UpdateTargetId = "SupervisorRegistrationDetails",
        InsertionMode = InsertionMode.Replace,
        LoadingElementId = "UpdateProgress1"
    };
}

<script src="~/Asset/Scripts/jquery.unobtrusive-ajax.min.js"></script>

@section scripts{
    @Scripts.Render("~/Asset/Scripts/AjaxModal.js")
}

<section class="content-wrapper main-content clear-fix">
    <div class="well bottom" style="padding-bottom: 16px">
        <div class="row">
            @using (Ajax.BeginForm("_SupervisorRegistration", "WorkerInfo", null, options, new { @id = "SupervisorRegistrationSearchDetails" }))
            {
                @Html.AntiForgeryToken()
                <div class="col-sm-4">
                    @Html.Label(@GlobalResEstate.lblSearch)
                    @*Modified by Shazana 16/1/2024*@
                    @Html.TextBox("filter", null, htmlAttributes: new { @class = "form-control", placeholder = "Supervisor Id / Name", @id = "txtfilter", @value = "" })
                </div>
                <div class="col-sm-2" style="padding-top:25px;">
                    <input class="btn btn-primary" type="submit" id="btnCari" name="Lihat" value=@GlobalResEstate.btnView />
                </div>
            }
        </div>
    </div>

    <div class="well" style="margin-top: 7px">
        <div class="modal-body">
            <div class="panel panel-primary">
                <div class="panel-heading">@GlobalResEstate.lblTitleSupervisorRegistration</div>
                <div class="panel-body">
                    <div id="SupervisorRegistrationDetails">
                        @Html.Action("_SupervisorRegistration")
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer col-md-12">
            <a data-modal1='' href=@Url.Action("SupervisorRegistrationCreate", "BasicInfo") class="btn btn-success" role="button" onclick="return DisplayProgressMessage(this);">@GlobalResEstate.btnAdd</a>
            <a href=@Url.Action("Index", "BasicInfo") class="btn btn-warning" role="button" onclick="return DisplayProgressMessage(this);">@GlobalResEstate.btnBack</a>
        </div>
    </div>
    @*</div>*@
</section>

<!-- modal placeholder-->
<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>

<div id='myModal1' class='modal fade in'>
    <div class="modal-dialog modal-lg" style="width: 70%">
        <div class="modal-content">
            <div id='myModalContent1'></div>
        </div>
    </div>
</div>




