@model MVC_SYSTEM.Models.tbl_PktUtama
@{
    string KategoriAktiviti = ViewBag.KateName;
    string JenisLot = ViewBag.JnsLot;
}
<section class="content-wrapper main-content clear-fix">

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 class="modal-title">Kemaskini Peringkat</h3>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="modal-body">
            <div class="form-horizontal">
                <div class="col-sm-12" id="selectionsection">
                    <div class="panel panel-primary">
                        <div class="panel-heading">Maklumat Asas Peringkat</div>
                        <div class="panel-body">
                            <div class="panel-body">
                                <div class="form-group">
                                    <label class="control-label col-sm-3">Jenis Lot:</label>
                                    <div class="col-sm-3">
                                        @*@Html.EditorFor(model => model.fld_JnsLot, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })*@
                                        @Html.TextBox("fld_JnsLot", JenisLot, new { @class = "form-control", @readonly = "readonly" })
                                        @*@Html.ValidationMessageFor(model => model.fld_JnsLot, "", new { @class = "text-danger" })*@
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-sm-3">Kategori Aktiviti:</label>
                                    <div class="col-sm-8">
                                        @Html.TextBox("KategoriAktiviti", KategoriAktiviti, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                </div>
                               
                                <div class="form-group">
                                    <label class="control-label col-sm-3">Cost Centre:</label>
                                    <div class="col-sm-3">
                                        @Html.EditorFor(model => model.fld_IOcode, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                        @*@Html.ValidationMessageFor(model => model.fld_IOcode, "", new { @class = "text-danger" })*@
                                    </div>
                                </div>
                                @*<div class="form-group">
                                    <label class="control-label col-sm-3">Kod Peringkat:</label>
                                    <div class="col-sm-3">
                                        @Html.EditorFor(model => model.fld_PktUtama, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                        @Html.ValidationMessageFor(model => model.fld_PktUtama, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-sm-3">Nama Peringkat:</label>
                                    <div class="col-sm-8">
                                        @Html.TextBoxFor(model => model.fld_NamaPktUtama, htmlAttributes: new { @class = "form-control col-sm-8" })
                                        @Html.ValidationMessageFor(model => model.fld_NamaPktUtama, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                @*<div class="form-group">
                                        <label class="control-label col-sm-3">Luas:</label>
                                        <div class="col-sm-3">
                                            @Html.TextBoxFor(model => model.fld_Luas, htmlAttributes: new { @class = "form-control col-sm-3" })
                                            @Html.ValidationMessageFor(model => model.fld_Luas, "", new { @class = "text-danger" })
                                        </div>
                                        <label class="control-label col-sm-2">Unit Luas:</label>
                                        <div class="col-sm-3">
                                            @Html.DropDownListFor(model => model.fld_UnitLuas, new SelectList(ViewBag.UnitLuas, "Value", "Text"), new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.fld_UnitLuas, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-3">Nama Penyelia:</label>
                                        <div class="col-sm-8">
                                            @Html.TextBoxFor(model => model.fld_NamaPenyelia, htmlAttributes: new { @class = "form-control col-sm-3" })
                                            @Html.ValidationMessageFor(model => model.fld_NamaPenyelia, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    @Html.HiddenFor(model => model.fld_PktID)*@
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal-footer">
            <input class="btn btn-success" type="submit" value=@GlobalResEstate.btnSave />
            <button class="btn btn-warning" data-dismiss="modal">@GlobalResEstate.btnBack</button>
        </div>
    }
</section>

<script>
    $("form").removeData("validator");
    $("form").removeData("unobtrusiveValidation");
    $.validator.unobtrusive.parse("form");
</script>
