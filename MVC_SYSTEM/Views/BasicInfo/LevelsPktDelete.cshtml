@model MVC_SYSTEM.Models.tbl_PktUtama

@{
    ViewBag.Title = "LevelsPktDelete";
    //Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 class="modal-title">@GlobalResEstate.titleDelete</h3>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="modal-body">
        <div class="form-horizontal">
            @if (ViewBag.DeleteFlag == 2)
            {
                <p style="color:red">Sila hapuskan sub peringkat.</p>
            }
            else if (ViewBag.DeleteFlag == 3)
            {
                <p style="color:red">Sila hapuskan sub peringkat dan blok.</p>
            }
            else
            {
                <span id="progress" class="text-center" style="display: none;">
                    <img src="~/Asset/Images/wait.gif" alt="wait" />
                </span>
                <div class="form-group">
                    <label class="control-label col-md-2">Kod Peringkat</label>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.fld_PktUtama, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Nama Peringkat</label>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.fld_NamaPktUtama, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Luas</label>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.fld_LsPktUtama, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-9 col-sm-offset-3">
                        <h3>
                            <span class="label label-danger">
                                @GlobalResEstate.msgDelete
                            </span>
                        </h3>
                    </div>
                </div>
            }
        </div>
    </div>


    <div class="modal-footer">
        <button class="btn btn-primary" data-dismiss="modal">@GlobalResEstate.btnNo</button>
        <input class="btn btn-danger" type="submit" value=@GlobalResEstate.btnYes />
    </div>
}

