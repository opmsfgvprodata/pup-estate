@model MVC_SYSTEM.Models.vw_KumpulanPekerja
@{
    Layout = null;
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 class="modal-title">Tambah Pekerja Ke Kumpulan</h3>
</div>

@Scripts.Render("~/Asset/Scripts/AjaxModal.js")


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="modal-body">

        <div class="form-horizontal">
            <div class="form-group">
                <label class="control-label col-md-2 col-md-offset-1">Nama Pekerja</label>
                <div class="col-md-4">
                    @Html.EditorFor(model => model.fld_Nama, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2 col-md-offset-1">No Pekerja</label>
                <div class="col-md-4">
                    @Html.EditorFor(model => model.fld_Nopkj, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2 col-md-offset-1">Kod Kumpulan</label>
                <div class="col-md-4">
                    @Html.TextBox("Kod Kumpulan", null, htmlAttributes: new { @class = "form-control", @Value = @ViewBag.KodKumpulan, disabled = "disabled" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2 col-md-offset-1">Keterangan Kumpulan</label>
                <div class="col-md-8">
                    @Html.TextBox("Kod Kumpulan", null, htmlAttributes: new { @class = "form-control", @Value = @ViewBag.Keterangan, disabled = "disabled" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-12 text-center">
                    <h3>
                        <span class="label label-danger">
                            Adakah anda mahu memasukkan pekerja ke dalam kumpulan seperti diatas?
                        </span>
                    </h3>
                </div>
            </div>
        </div>
    </div>


    <div class="modal-footer">
        <input class="btn btn-primary" type="submit" value=@GlobalResEstate.btnYes />
        <button class="btn btn-danger" data-dismiss="modal">@GlobalResEstate.btnNo</button>
    </div>
}

