}

<section class="content-wrapper main-content clear-fix">
    <div class="well">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <!-- ** BEGIN POP-UP MESSAGE AREA ** -->
            @*<div class="submit-progress hidden">
