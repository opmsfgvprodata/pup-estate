                        <div class="panel-body">
                            <div class="form-group">
                                <div class="col-sm-6">
                                    <label for="ListReport">@GlobalResEstate.lblWorkerInfoList</label>
                                    @Html.DropDownList("WorkerInfoList", null, htmlAttributes: new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer-report">
                    <input class="btn btn-primary" type="submit" name="upload" id="upload" value=@GlobalResEstate.btnGo onclick="return DisplayProgressMessage(this);" />
