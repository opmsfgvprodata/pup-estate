@using MVC_SYSTEM.Class
@model MVC_SYSTEM.Models.tbl_InsentifViewModelEdit
@{
    Layout = null;
    GetConfig getConfig = new GetConfig();
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 class="modal-title">@GlobalResEstate.titleUpdateIncentive</h3>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="modal-body">
        <div class="form-horizontal">
            <div class="panel panel-primary">
                <div class="panel-heading">@GlobalResEstate.lblInsentifInfo</div>
                <div class="panel-body">
                    <div class="form-group">
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResEstate.lblIncentiveType:</label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(model => model.fld_Keterangan, htmlAttributes: new { @class = "form-control", @readonly = "true", @Value = getConfig.GetIncentiveDescFromCode(Model.fld_KodInsentif, Model.fld_NegaraID, Model.fld_SyarikatID) })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResEstate.lblIncentiveValue (RM):</label>
                            <div class="col-sm-4">
                                @Html.TextBoxFor(model => model.fld_NilaiTidakTetap, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.fld_NilaiTidakTetap, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        @Html.HiddenFor(model => model.fld_InsentifID)
                        @Html.HiddenFor(model => model.fld_KodInsentif)
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer" style="margin-top: -20px;">
        <input class="btn btn-success" type="submit" value=@GlobalResEstate.btnSave />
        <button class="btn btn-warning" data-dismiss="modal">@GlobalResEstate.btnBack</button>
    </div>
}
<script>
    $("form").removeData("validator");
    $("form").removeData("unobtrusiveValidation");
    $.validator.unobtrusive.parse("form");
</script>


