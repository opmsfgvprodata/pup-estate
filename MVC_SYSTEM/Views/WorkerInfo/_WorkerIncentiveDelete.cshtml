@model MVC_SYSTEM.Models.vw_MaklumatInsentif
@{
    Layout = null;
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 class="modal-title">@GlobalResEstate.titleDeleteIncentive</h3>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="modal-body" style="margin-bottom: -30px">
        <div class="form-horizontal">
            <div class="panel panel-primary">
                <div class="panel-heading">@GlobalResEstate.lblInsentifInfo</div>
                <div class="panel-body">
                    <div class="form-group">
                        <label class="control-label col-md-3">@GlobalResEstate.lblIncentiveType:</label>
                        <div class="col-md-8">
                            @Html.TextBoxFor(model => model.fld_Keterangan, htmlAttributes: new {@class = "form-control", disabled = "disabled"})
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3">@GlobalResEstate.lblIncentiveValue (RM):</label>
                        <div class="col-md-4">
                            @Html.TextBoxFor(model => model.fld_NilaiInsentif, htmlAttributes: new {@class = "form-control", disabled = "disabled"})
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
        <div class="col-sm-12 text-center">
            <h3>
                <span class="label label-danger">
                    @GlobalResEstate.msgDelete
                </span>
            </h3>
        </div>
    <div class="modal-footer" style="margin-top: 40px">
        <input class="btn btn-success" type="submit" value=@GlobalResEstate.btnYes />
        <button class="btn btn-danger" data-dismiss="modal">@GlobalResEstate.btnNo</button>
    </div>
}