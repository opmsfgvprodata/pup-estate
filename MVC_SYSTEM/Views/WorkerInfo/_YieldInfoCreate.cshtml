@using MVC_SYSTEM.Class
@model MVC_SYSTEM.ViewingModels.vw_HasilSawitPktCreate

@{
    @Scripts.Render("~/bundles/jqueryval")
}

<section class="content-wrapper main-content clear-fix">

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 class="modal-title">@GlobalResEstate.lblYieldInfoAdd</h3>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="modal-body">
            <div class="form-horizontal">
                <div class="panel panel-primary">
                    <div class="panel-heading">@GlobalResEstate.lblYieldInfo</div>
                    <div class="panel-body">
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResEstate.lblLevelCode:</label>
                            <div class="col-sm-3">
                                @Html.DropDownListFor(model => model.fld_PktUtama, new SelectList(ViewBag.JenisPeringkatList, "Value", "Text"), new { @class = "selectionList edit-mode form-control" })
                                @*@Html.ValidationMessageFor(model => model.fld_NegaraID, "", new { @class = "text-danger" })*@
                                @Html.ValidationMessageFor(model => model.fld_PktUtama, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">@GlobalResEstate.lblMonth:</label>
                            <div class="col-sm-3">
                                @Html.DropDownListFor(model => model.fld_Bulan, new SelectList(ViewBag.MonthList, "Value", "Text"), new { @class = "selectionList edit-mode form-control" })
                                @Html.ValidationMessageFor(model => model.fld_Bulan, "", new { @class = "text-danger" })
                            </div>
                            <label class="control-label col-sm-1">@GlobalResEstate.lblYear:</label>
                            <div class="col-sm-3">
                                @Html.DropDownListFor(model => model.fld_Tahun, new SelectList(ViewBag.YearList, "Value", "Text"), new { @class = "selectionList edit-mode form-control" })
                                @Html.ValidationMessageFor(model => model.fld_Tahun, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResEstate.hdrYield:</label>
                            <div class="col-sm-3">
                                @Html.TextBoxFor(model => model.fld_HasilTan, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.fld_HasilTan, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        @*<div class="form-group">
                                <label class="control-label col-sm-3">@GlobalResEstate.lblCodeValue3:</label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(model => model.fldOptConfFlag3, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.fldOptConfFlag3, "", new { @class = "text-danger" })
                                </div>
                            </div>*@
                    </div>
                </div>
            </div>
        </div>

        <div class="modal-footer">
            <input class="btn btn-success" type="submit" value=@GlobalResEstate.btnSave>
            <button class="btn btn-warning" data-dismiss="modal">@GlobalResEstate.btnBack</button>
        </div>
    }
</section>

<script>
    $("form").removeData("validator");
    $("form").removeData("unobtrusiveValidation");
    $.validator.unobtrusive.parse("form");
</script>
